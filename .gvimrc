" ウィンドウの縦幅
set lines=55

" ウィンドウの横幅
set columns=180

" 色
set t_Co=256

" カラースキーム
colorscheme badwolf

" ダーク系のカラースキームを使う
set background=dark

" フォントにリクティ使う
set guifont=Ricty_Diminished_Discord:h12:cSHIFTJIS:qDRAFT

" レンダリング
set renderoptions=type:directx,geom:1,renmode:5,level:0.75

" gvimでメニューバーとツールバーを表示しない
set guioptions-=m
set guioptions-=T
" gvimでスクロールバーを表示しない
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L

" スワップファイルを作成しない
set noswapfile
" バックアップファイルを作成しない
set nobackup
" undoファイルのディレクトリ設定
set undodir=＄HOME/.cache/undo

